<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/car_avatar_iv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        tools:src = "@tools:sample/avatars"
        android:contentDescription="@string/car_image_description"/>

    <TextView
        android:id="@+id/car_name_tv"
        style="@style/stadard_text_style"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_0"
        android:layout_gravity="bottom"
        tools:text="LADA 2107"
        android:textAlignment="center"
        android:background="#FF2bc9e5"/>


</FrameLayout>
